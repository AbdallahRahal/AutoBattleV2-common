{
    "compilerOptions": {
        "target": "ES2020",
        "declaration": true,
        "outDir": "./dist",
        "strict": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "skipLibCheck": true,
        "module": "ESNext",
        "moduleResolution": "node",
        "rootDir": "./src",
    },
    "include": [
        "src/**/*",
    ]
}