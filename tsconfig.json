{
    "compilerOptions": {
        "module": "CommonJS",
        "outDir": "./dist",
        "rootDir": "./src",
        "declaration": true,
        "target": "ES2020",
        "strict": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "skipLibCheck": true,
        "moduleResolution": "node",
    },
    "include": [
        "src/**/*",
    ]
}